<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvNombreAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NombreAutor"
        android:textSize="48sp" />

    <Button
        android:id="@+id/btAgenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textoBotonAgenda" />

    <Button
        android:id="@+id/btCalculadora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextoBotonCalculadora" />

    <Button
        android:id="@+id/btReceta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/TextoBotonReceta" />
</LinearLayout>